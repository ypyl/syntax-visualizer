{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm",
      "windows": {
        "options": { "cwd": "${workspaceFolder}/client" }
      },
      "command": "npm",
      "args": ["run", "compile"],
      "type": "shell",
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/server/SyntaxVisualizer.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "All",
      "dependsOn": ["npm", "build"]
    }
  ]
}
