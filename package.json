{
  "name": "syntax-visualizer-csharp",
  "description": "CSharp syntax visualizer",
  "publisher": "vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:syntax-visualizer"
  ],
  "main": "./client/dist/extension",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "syntax-visualizer",
        "contents": "No csharp code found. Try to refresh."
      }
    ],
    "commands": [
      {
        "command": "syntaxVisualizer.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "syntaxVisualizer",
          "title": "Syntax Visualizer CSharp",
          "icon": "media/dep.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "syntaxVisualizer.refreshEntry",
          "when": "view == syntax-visualizer",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "syntaxVisualizer": [
        {
          "id": "syntax-visualizer",
          "name": "Syntax Visualizer CSharp"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CSharp syntax visualizer configuration",
      "properties": {
        "syntaxVisualizerCSharp.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "syntaxVisualizerCSharp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the CSharp syntax visualizer service."
        }
      }
    }
  },
  "scripts": {
    "webpack": "webpack --mode development",
    "webpack-release": "webpack --mode production",
    "vscode:prepublish": "webpack --mode production"
  },
  "devDependencies": {
    "@types/node": "^13.11.0",
    "@types/vscode": "1.43.0",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.3"
  }
}
